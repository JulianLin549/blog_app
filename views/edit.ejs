<%-include ("partials/header")  -%> <!-- updated syntax in ejs v3.0.1 -->

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title %>  </div>
    <!--form 基本上不太吃put，他會塞到URL上as a query string(like get request )  -->
    <!-- you have to use method overide! after the url, add "?_method=PUT" and method-overide will treat it as put request!-->
    <form  class="ui form" action="/blogs/<%=blog._id %>?_method=PUT " method="POST">
        <div class="field">
            <label >Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title %>">
        </div>
        <div class="field">
            <label >Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image %>">
        </div>
        <div class="field">
            <label >Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"> <%=blog.body %> </textarea>
        </div>
        <input class="ui violet big inverted button" type="submit" value="Submit">
    </form>
</div>


<%-include ("partials/footer") -%> <!-- updated syntax in ejs v3.0.1 -->